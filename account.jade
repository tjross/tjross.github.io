extends ./partials/_base.jade

block title
  title 43Layers - My Account

block content
  include  ./partials/_header.jade
  .content
    .container
      .my-account
        h1.text-center My Account
        .profile#profile
          .row
            .col-md-3.col-xs-4
              img.profile-picture(src='images/Deer_stir_products_page.jpg')
            .col-md-9.col-xs-8
              .row
                .col-md-10.col-xs-10
                  h3.name Tester McTesty
                .col-md-2.col-xs-2
                  button(type="submit").btn.btn-default Edit
              p.description
                | Room for 100 word description here...
        .row
          .col-md-3
            .menu
              ul.menu-links
                li
                  a(href="#profile") My Profile
                li
                  a(href="#notifications") Notifications
                li
                  a(href="#current-projects") Current Projects
                li
                  a(href="#favorites") Favorites
                li
                  a(href="#order-history") Order History
                li
                  a(href="#settings") Settings
          .col-md-9
            .notifications#notifications
              h2 Notifications
              ul
                li Your designer has submitted a rendering.
                li You have submitted your deposit and started your project.
                li You have been assigned a designer.
                li You submitted project: "Keys to Love". We are in the process of finding  you an expert designer to bring your project to life.
                li Welcome to 43Layers! Thanks for signing up!
            .current-projects#current-projects
              h2 Current Projects
              .table-responsive
                table.table
                  tr
                    th Project Name
                    th Order #
                    th Designer
                    th Due Date
                    th Status
                    th
                  tr
                    td Keys to Love
                    td 12345678
                    td Diego Taccioli
                    td 9/12/2014
                    td Shipping
                    td View
                  tr
                    td Jewelry Nails
                    td 12345678
                    td Diego Taccioli
                    td 9/25/2014
                    td Design
                    td View
            .favorites#favorites
              h2 Favorites
              .row
                .col-md-4
                  img(src='http://placehold.it/100x100')
                .col-md-4
                  img(src='http://placehold.it/100x100')
                .col-md-4
                  img(src='http://placehold.it/100x100')            
              .row
                .col-md-4
                  img(src='http://placehold.it/100x100')
                .col-md-4
                  img(src='http://placehold.it/100x100')
                .col-md-4
                  img(src='http://placehold.it/100x100')
            .order-history#order-history
              h2 Order History
              .table-responsive
                table.table
                  tr
                    th Project Name
                    th Order #
                    th Designer
                    th Arrival Date
                    th Status
                    th Rating
                  tr
                    td Monograph Napkin Holder
                    td 12345678
                    td Diego Taccioli
                    td 8/12/2014
                    td On Time
                    // This should be a button
                    td Rate
                  tr
                    td Wedding This Way Sign
                    td 12345678
                    td Diego Taccioli
                    td 8/5/2014
                    td On Time
                    // TODO: Add actual star rating
                    td 5 Starts
            .settings#settings
              h2 Settings
              form.form-horizontal
                .form-group
                  label(for="email").col-sm-3.control-label Email
                  div.col-sm-6
                    input(type="email" placeholder="Email").form-control#email
                .form-group
                  label(for="email").col-sm-3.control-label Notification Emails
                  div.col-sm-6
                    label.radio-inline
                      input(type="radio" name="notifications" value="yes")
                      | Yes
                    label.radio-inline
                      input(type="radio" name="notifications" value="no")
                      | No
                .form-group
                  label(for="email").col-sm-3.control-label Newsletter
                  div.col-sm-6
                    label.radio-inline
                      input(type="radio" name="newsletter" value="yes")
                      | Yes
                    label.radio-inline
                      input(type="radio" name="newsletter" value="no")
                      | No
                .form-group
                  .col-sm-3.col-sm-offset-3
                    button(type="submit").btn.btn-secondary Cancel
                    button(type="submit").btn.btn-primary Save
                  .col-sm-3.col-sm-offset-2
                    button(type="submit").btn.btn-default Deactivate Account
                    

  include ./partials/_footer.jade
